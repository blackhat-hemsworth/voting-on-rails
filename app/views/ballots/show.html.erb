<h1><%= @ballot.name %></h1>

<h3>Votes</h3>
<% @votes.each do |vote| %>
  <div class="vote">
    <div class="column">
      <h5>Topic</h5>
      <%= vote.topic %>
    </div>
    <div class="column">
      <h5>Number of selections</h5>
      <%= vote.n_selections %>
    </div>
    <div class="centered">
      <h5>Choices</h5>
      <% vote.vote_choices.each do |vc| %>
        <div>
          <%= vc.choice %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
<% end %>
<%= link_to "Back", @election %>
